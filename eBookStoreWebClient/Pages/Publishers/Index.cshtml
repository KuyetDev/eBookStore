@page
@model eBookStoreWebClient.Pages.Publishers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form method="get">
    <input type="text" name="keyword" placeholder="Search" />
    <button type="submit">Search</button>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Publishers[0].PublisherName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Publishers[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Publishers[0].State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Publishers[0].Country)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Publishers) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PublisherName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.PubId">Edit</a> |
                <a asp-page="./Delete" asp-route-id="@item.PubId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<a asp-page="/Homes/AdminHomePage">Back to home</a>