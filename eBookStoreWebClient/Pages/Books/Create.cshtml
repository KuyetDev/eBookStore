@page
@model Assignment2.eBookStore.Pages.Books.CreateModel

@{
    ViewData["Title"] = "Create";
}
<head>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
</head>
<h1>Create</h1>

<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Book.Title" class="control-label"></label>
                <input asp-for="Book.Title" class="form-control" id="title"/>
                <span asp-validation-for="Book.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Type" class="control-label"></label>
                <input asp-for="Book.Type" class="form-control" id="type"/>
                <span asp-validation-for="Book.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.PubId" class="control-label"></label>
                <select asp-for="Book.PubId" class ="form-control" id="pubId" asp-items="ViewBag.PubId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Book.Price" class="control-label"></label>
                <input asp-for="Book.Price" class="form-control" />
                <span asp-validation-for="Book.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Advance" class="control-label"></label>
                <input asp-for="Book.Advance" class="form-control" id="advance"/>
                <span asp-validation-for="Book.Advance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Royalty" class="control-label"></label>
                <input asp-for="Book.Royalty" class="form-control" id="royalty"/>
                <span asp-validation-for="Book.Royalty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.YtdSales" class="control-label"></label>
                <input asp-for="Book.YtdSales" class="form-control" id="ytdSale"/>
                <span asp-validation-for="Book.YtdSales" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Notes" class="control-label"></label>
                <input asp-for="Book.Notes" class="form-control" id="note"/>
                <span asp-validation-for="Book.Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.PublishedDate" class="control-label"></label>
                <input asp-for="Book.PublishedDate" class="form-control" id="publishedDate"/>
                <span asp-validation-for="Book.PublishedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Author</label>
                <select class="form-control" name="AuthortId" id="authorId" value="ViewBag.Id" asp-items="ViewBag.AuthorId"></select>
            </div>
            <div class="form-group">
                <button type="submit">Create</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>